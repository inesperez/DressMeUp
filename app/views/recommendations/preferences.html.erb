<div>
<div class="d-flex justify-content-center">
<div class="weather-container mt-3 mb-3 d-flex">
<%= image_tag 'weather.png', alt: "image of clouds", class: "weather-card" %>
<div>
<p class="weather-font weather-font-color my-0"> <strong><%= @location %></strong>: currently <strong><%= @weather_summary %></strong> and <strong><%= @current_temp %>°</strong></p>
<p class="weather-font weather-font-color my-0"><strong>Max.temp.</strong> today: <strong><%= @max_temp %>°</strong></p>
</div>
</div>
</div>
<div class="preferences-form text-center">
  <h1>Any preferences?</h1>
    <div >
      <% if @garment %>
      <p>You've chosen to wear:</p>
        <% if @garment.photo.attached? %>
          <%= cl_image_tag @garment.photo.key, class: "card-category-recommendation"%>
        <% else %>
          <%= image_tag(@garment.image_url, class: "card-category-recommendation") %>
        <% end %>
      <% end %>
    </div>
  <div class="field" data-controller = "preferences">
    <%= form_with url: recommendations_path, method: :get, local: true do |form| %>
          <%# <%= form.label :location, "What's your location?" %>
            <%# <div> %>
            <%# <%= form.text_field :location %>
            <%# </div>  %>
      <% if @garment %>
        <%= form.text_field :garment, value: @garment.id , style: 'display:none;'%>
       <% end %>
          <%= form.label :occasion, "What's the occasion?", style: "margin-bottom: 20px" %>
            <div>
              <div>
                <div>
                  <%= form.select :occasion, options_for_select(
                    [["", ""],["Workwear", "workwear"], ["Casual", "casual"], ["Party", "party"], ["Activewear", "activewear"], ["Other (please specify)", "other"]],
                 params[:occasion]
                  ), {}, data: { preferences_target: "occasion", action: "change->preferences#fire" }
                  %>
                </div>
              </div>
              </div>
             <div data-preferences-target="customOccasion" class="d-none" style="margin-top: 20px">
               <%= form.label :custom_occasion, "Specify the occasion", style: "margin-bottom: 20px" %>
               <div>
                 <%= form.text_field :custom_occasion, placeholder: "e.g. dinner", class: "input" %>
              </div>
             </div>
          <div style="margin-top: 20px;">
            <%= form.label :feeling, "How are you feeling today?", style: "margin-bottom: 20px" %>
            <div>
            <%= form.text_field :feeling, placeholder: "e.g. happy, sad, colorful", class: "input" %>
            </div>
          </div>
      <div class="actions" >
        <%= form.submit "Take me to the outfits", class: 'btn primary mt-4 preferences-button' %>
      </div>
    <% end %>
  </div>
</div>

</div>
